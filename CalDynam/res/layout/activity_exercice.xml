<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
       <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Exercise Search"
        android:textSize="20dp"
        android:layout_centerInParent="true"/>
      
          
       <EditText 
        android:id="@+id/edtRechercheExercice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       android:maxLength="20"
       />   
        
        <LinearLayout 
         android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
          >
       
       <Button
        android:id="@+id/btnRechercheExercice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find"
    />
       
        <Button
        android:id="@+id/btnTerminerExercice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
    />
       
      </LinearLayout>           
    <ListView android:id="@+id/ExerciseList"
           android:layout_width="fill_parent"
           android:layout_height="0px"
           android:layout_weight="1"
  	  />  
  	  <ListView android:id="@+id/ExerciseListSearch"
           android:layout_width="fill_parent"
           android:layout_height="0px"
           android:layout_weight="1"
  	  />     
</LinearLayout>
